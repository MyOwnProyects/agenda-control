<!doctype html>
<html lang="es">
<head>
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<title>Gestión de Documentos</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet"/>
<style>
  body {
    font-family: 'Inter', sans-serif;
  }
  .sidebar {
    min-width: 220px;
    max-width: 220px;
    height: 100vh;
    background-color: #fff;
    border-right: 1px solid #dee2e6;
  }
  .dropzone {
    border: 2px dashed #dee2e6;
    border-radius: 0.5rem;
    height: 16rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    background-color: #f8f9fa;
    transition: background-color 0.2s;
  }
  .dropzone:hover {
    background-color: #e9ecef;
  }
  .dropzone input {
    display: none;
  }
  .file-badge {
    font-size: 0.75rem;
    padding: 0.25em 0.5em;
    border-radius: 0.25rem;
  }
</style>
</head>
<body>

<div class="d-flex">
  <!-- Sidebar -->
  <aside class="sidebar d-flex flex-column p-3">
    <div class="mb-4 border-bottom pb-2">
      <h2 class="fs-6 fw-semibold mb-1">Expediente</h2>
      <p class="text-secondary mb-0">Paciente: Sofia Rodriguez</p>
    </div>
    <nav class="nav flex-column">
      <a href="#" class="nav-link text-secondary d-flex align-items-center mb-1">
        <i class="bi bi-file-earmark-text me-2"></i> Resumen
      </a>
      <a href="#" class="nav-link text-secondary d-flex align-items-center mb-1">
        <i class="bi bi-calendar-event me-2"></i> Citas
      </a>
      <a href="#" class="nav-link text-secondary d-flex align-items-center mb-1">
        <i class="bi bi-heart-pulse me-2"></i> Diagnósticos
      </a>
      <a href="#" class="nav-link text-secondary d-flex align-items-center mb-1">
        <i class="bi bi-activity me-2"></i> Tratamientos
      </a>
      <a href="#" class="nav-link active d-flex align-items-center fw-semibold mb-1" style="background-color:#cfe2ff; color:#0d6efd; border-radius:0.5rem;">
        <i class="bi bi-folder me-2"></i> Documentos
      </a>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="flex-grow-1 p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3 fw-bold">Gestión de Documentos</h1>
      <label class="btn btn-primary d-flex align-items-center gap-2">
        <i class="bi bi-upload"></i> Subir Documento
        <input type="file" id="uploadFile">
      </label>
    </div>

    <!-- Subir nuevo documento -->
    <div class="mb-4">
      <h2 class="h5 fw-semibold mb-3">Subir nuevo documento</h2>
      <div class="p-4 border rounded-3 bg-white shadow-sm">
        <label for="dropzone" class="dropzone w-100 text-center flex-column">
          <i class="bi bi-cloud-upload display-1 text-secondary mb-2"></i>
          <p class="mb-1"><strong>Click para subir</strong> o arrastra y suelta</p>
          <p class="text-muted small">PDF, DOCX, JPG (MAX. 10MB)</p>
          <input type="file" id="dropzone">
        </label>

        <div class="mt-3">
          <label for="category-upload" class="form-label">Categoría</label>
          <select class="form-select" id="category-upload">
            <option selected>Seleccionar categoría</option>
            <option>Resultados de Laboratorio</option>
            <option>Informes Médicos</option>
            <option>Imágenes Diagnósticas</option>
            <option>Consentimientos</option>
          </select>
        </div>

        <div class="mt-3 text-end">
          <button class="btn btn-primary">Confirmar Subida</button>
        </div>
      </div>
    </div>

    <!-- Categorías y búsqueda -->
    <div class="mb-4 d-flex justify-content-between align-items-center">
      <div class="input-group w-50">
        <span class="input-group-text"><i class="bi bi-search"></i></span>
        <input type="text" class="form-control" placeholder="Buscar documentos...">
      </div>
      <select class="form-select w-auto">
        <option selected>Filtrar por categoría</option>
        <option>Resultados de Laboratorio</option>
        <option>Informes Médicos</option>
        <option>Imágenes Diagnósticas</option>
        <option>Consentimientos</option>
      </select>
    </div>

    <!-- Tabla de documentos -->
    <div class="table-responsive border rounded-3 bg-white shadow-sm">
      <table class="table table-hover mb-0 align-middle">
        <thead class="table-light">
          <tr>
            <th>Nombre del archivo</th>
            <th>Categoría</th>
            <th>Fecha de subida</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><i class="bi bi-file-earmark-pdf text-danger me-1"></i> Resultados_Laboratorio_Ene24.pdf</td>
            <td><span class="badge bg-primary file-badge">Resultados de Laboratorio</span></td>
            <td>2024-01-20</td>
            <td>
              <a href="#" class="text-secondary me-2"><i class="bi bi-eye"></i></a>
              <a href="#" class="text-secondary me-2"><i class="bi bi-download"></i></a>
              <a href="#" class="text-danger"><i class="bi bi-trash"></i></a>
            </td>
          </tr>
          <tr>
            <td><i class="bi bi-file-earmark-word text-primary me-1"></i> Informe_Consulta_Mar23.docx</td>
            <td><span class="badge bg-success file-badge">Informes Médicos</span></td>
            <td>2023-03-16</td>
            <td>
              <a href="#" class="text-secondary me-2"><i class="bi bi-eye"></i></a>
              <a href="#" class="text-secondary me-2"><i class="bi bi-download"></i></a>
              <a href="#" class="text-danger"><i class="bi bi-trash"></i></a>
            </td>
          </tr>
          <tr>
            <td><i class="bi bi-file-earmark-image text-warning me-1"></i> Radiografia_Torax_May23.jpg</td>
            <td><span class="badge bg-warning text-dark file-badge">Imágenes Diagnósticas</span></td>
            <td>2023-05-21</td>
            <td>
              <a href="#" class="text-secondary me-2"><i class="bi bi-eye"></i></a>
              <a href="#" class="text-secondary me-2"><i class="bi bi-download"></i></a>
              <a href="#" class="text-danger"><i class="bi bi-trash"></i></a>
            </td>
          </tr>
          <tr>
            <td><i class="bi bi-file-earmark-pdf text-danger me-1"></i> Consentimiento_Informado.pdf</td>
            <td><span class="badge bg-purple file-badge" style="background-color:#d6b5f1; color:#4a148c;">Consentimientos</span></td>
            <td>2023-01-10</td>
            <td>
              <a href="#" class="text-secondary me-2"><i class="bi bi-eye"></i></a>
              <a href="#" class="text-secondary me-2"><i class="bi bi-download"></i></a>
              <a href="#" class="text-danger"><i class="bi bi-trash"></i></a>
            </td>
          </tr>
        </tbody>
      </table>

      <div class="d-flex justify-content-between align-items-center p-3 small text-secondary">
        <span>Mostrando 1 a 4 de 4 resultados</span>
        <div class="btn-group">
          <button class="btn btn-outline-secondary btn-sm" disabled>Anterior</button>
          <button class="btn btn-outline-secondary btn-sm">Siguiente</button>
        </div>
      </div>
    </div>

  </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
