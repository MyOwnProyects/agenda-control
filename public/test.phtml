      --background-light: #f6f7f8;
      --surface-light: #ffffff;
      --border-light: #e0e6e9;
      --content-dark: #101c22;
      --subtle-light: #6b7f89;
    }

    body {
      font-family: 'Inter',system-ui,-apple-system,"Segoe UI",Roboto,"Helvetica Neue",Arial;
      background: var(--background-light);
      color: var(--content-dark);
    }

    /* Sidebar */
    .app-sidebar {
      width: 260px;
      min-width: 260px;
      background: var(--surface-light);
      border-right: 1px solid var(--border-light);
    }

    /* Sticky table header inside scrolling container */
    .table-responsive .table thead th {
      position: sticky;
      top: 0;
      background: var(--background-light);
      z-index: 1;
    }

    /* Small visual touches to mimic the original rounded surfaces */
    .card-surface {
      background: var(--surface-light);
      border: 1px solid var(--border-light);
      border-radius: .75rem;
    }

    .btn-primary-custom {
      background: var(--primary);
      border-color: var(--primary);
    }
    .btn-primary-custom:hover { filter: brightness(.95); }

    /* avatar size */
    .avatar-sm { width: 40px; height: 40px; border-radius: 50%; background-size: cover; background-position: center; }

  </style>
</head>
