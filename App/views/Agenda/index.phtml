    //  funcion para renderizar calendario por mes  
    function renderCalendarMes() {
        const $calendarContainer = $('.div_header_month_container');
        const $dates = $calendarContainer.find('#calendar_month_dates');
        const year = fechaActual.getFullYear();
        const month = fechaActual.getMonth();
        const today = new Date();

        $dates.empty();

        const firstDayOfMonth = new Date(year, month, 1);
        const startingDay = firstDayOfMonth.getDay();
        const daysInMonth = new Date(year, month + 1, 0).getDate();
        const daysInPrevMonth = new Date(year, month, 0).getDate();

        const totalCells = 35; // 6 filas de 7 días

        for (let i = 0; i < totalCells; i++) {
            let day, displayMonth, displayYear, classList = 'div_month_day';

            if (i < startingDay) {
                // Días del mes anterior
                day = daysInPrevMonth - (startingDay - 1 - i);
                displayMonth = month === 0 ? 11 : month - 1;
                displayYear = month === 0 ? year - 1 : year;
                classList += ' other-month';
            } else if (i >= startingDay + daysInMonth) {
                // Días del mes siguiente
                day = i - (startingDay + daysInMonth) + 1;
                displayMonth = month === 11 ? 0 : month + 1;
                displayYear = month === 11 ? year + 1 : year;
                classList += ' other-month';
            } else {
                // Días del mes actual
                day = i - startingDay + 1;
                displayMonth = month;
                displayYear = year;

                if (
                    displayYear === today.getFullYear() &&
                    displayMonth === today.getMonth() &&
                    day === today.getDate()
                ) {
                    classList += ' current-day';
                }
            }

            const dateStr = `${displayYear}-${rellenar_fecha(displayMonth + 1)}-${rellenar_fecha(day)}`;
            $dates.append(`<div class="${classList}" data-day="${dateStr}">${day}</div>`);
        }
    }


    function rellenar_fecha(i) {
