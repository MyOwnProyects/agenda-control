    function limpiarCadena(str) {
        // Reemplazar \\n por saltos de línea reales
        let resultado = str.replace(/\\n/g, '\n');

        // Reemplazar caracteres unicode \\uXXXX por sus respectivos caracteres
        resultado = resultado.replace(/\\u([\dA-Fa-f]{4})/g, (match, grp) => {
            return String.fromCharCode(parseInt(grp, 16));
        });

        // Eliminar saltos de línea reales y normalizar espacios
        resultado = resultado.replace(/\n+/g, ' ').replace(/\s{2,}/g, ' ').trim();

        return resultado;
    }

