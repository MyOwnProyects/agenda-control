            //  GUARDAR UNA NOTA
            $(".btn_save_nota").on('click',function(){
                if ($(".input_titulo_nota").val().trim() == null || $(".input_titulo_nota").val().trim() == ''){
                    showAlert('danger','Ingrese el titulo de la nota');
