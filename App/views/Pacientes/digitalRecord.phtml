                    $.ajax({
                        url     : url_digital,
                        method  : 'post',
                        data    : {
                            accion      : 'save_subareas_focus',
                            obj_info    : obj_info,
                            nombre_completo : nombre_completo,
                            id_paciente     : id_paciente
                        },
                        success : function(data){
